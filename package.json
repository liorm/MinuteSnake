{
  "name": "minute-snake",
  "version": "1.0.0",
  "description": "Modern Snake game implementation",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "esbuild src/app.ts --bundle --outfile=dist/bundle.js --format=esm --platform=browser --target=es2021 --sourcemap",
    "dev": "npm run build -- --watch",
    "build:prod": "npm run build -- --minify",
    "serve": "npm run build -- --watch --serve=8080 --servedir=.",
    "format": "prettier --write \"**/*.{ts,js,json,html,css}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,css}\"",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 50",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "train": "tsx src/scripts/train.ts",
    "evaluate": "tsx src/scripts/evaluate.ts",
    "benchmark": "tsx src/scripts/benchmark.ts",
    "weight-manager": "tsx src/scripts/weight-manager.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^20.11.0",
    "@types/seedrandom": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.32.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "seedrandom": "^3.0.5"
  }
}
