#!/bin/sh

# Run lint-staged on staged files
npx lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Lint-staged failed. Please fix the issues before committing."
  exit 1
fi

# Run tests (optional: you can optimize to only run tests for changed files)
echo "Running tests..."
pnpm run test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed (running 'pnpm run test'). Please fix them before committing."
  exit 1
fi

echo "✅ All checks passed! Proceeding with commit."
